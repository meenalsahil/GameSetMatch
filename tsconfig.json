{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["server/**/*", "shared/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "client", "dist"]
}
